<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"


    >

  <ImageView
      android:layout_width="130dp"
      android:layout_height="90dp"
      android:src="@drawable/map"
      android:layout_marginLeft="145dp"
      />


  <RelativeLayout
      android:layout_width="460dp"
      android:layout_height="10dp"
      android:layout_marginTop="90dp"
      android:background="#ffb300">

  </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_gravity="center"
      android:layout_marginStart="0dp"
      android:layout_marginLeft="0dp"
      android:layout_marginTop="0dp">


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/redstar"


        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/blackstar"


        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/redstar"


        />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/blackstar"


        />


  </LinearLayout>





  <TableLayout
      android:layout_width="290dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="210dp"
      android:layout_marginLeft="60dp"

      >

    <TableRow>


      <ImageView
          android:layout_width="50dp"
          android:layout_height="30dp"
          android:scaleType="fitXY"
          android:layout_marginLeft="40dp"
          android:src="@drawable/sriflag"


          />


      <ImageView
          android:layout_width="50dp"
          android:layout_height="30dp"
          android:scaleType="fitXY"
          android:layout_marginLeft="30dp"
          android:src="@drawable/indi"/>


      <ImageView
          android:layout_width="50dp"
          android:layout_height="30dp"
          android:scaleType="fitXY"
          android:layout_marginLeft="30dp"
          android:src="@drawable/australia"/>



    </TableRow>
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"

        >





      <ImageView
          android:layout_width="50dp"
          android:layout_height="30dp"
          android:scaleType="fitXY"
          android:layout_marginLeft="40dp"
          android:src="@drawable/germany"



          />


      <ImageView
          android:layout_width="50dp"
          android:layout_height="30dp"
          android:scaleType="fitXY"
          android:layout_marginLeft="20dp"
          android:src="@drawable/canada"/>


      <ImageView
          android:layout_width="50dp"
          android:layout_height="30dp"
          android:scaleType="fitXY"
          android:layout_marginLeft="20dp"
          android:src="@drawable/italy"/>




    </TableRow>


    <TableRow

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        >





      <ImageView
          android:layout_width="50dp"
          android:layout_height="30dp"
          android:scaleType="fitXY"
          android:layout_marginLeft="40dp"
          android:src="@drawable/chaina"



          />


      <ImageView
          android:layout_width="50dp"
          android:layout_height="30dp"
          android:scaleType="fitXY"
          android:layout_marginLeft="20dp"
          android:src="@drawable/philip"/>


      <ImageView
          android:layout_width="50dp"
          android:layout_height="30dp"
          android:scaleType="fitXY"
          android:layout_marginLeft="20dp"
          android:src="@drawable/parris"/>




    </TableRow>

  </TableLayout>




  <RelativeLayout
      android:layout_width="460dp"
      android:layout_height="10dp"
      android:layout_marginTop="430dp"
      android:background="#000000">

  </RelativeLayout>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="440dp"
      android:text="Explore The World"
      android:textSize="40sp"
      android:gravity="center"
      android:textStyle="bold|italic"
      android:textColor="#000000"

      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="540dp"
      android:text="Developed By:Lathmini Sumodya"
      android:textSize="15sp"
      android:gravity="center"
      android:textStyle="bold|italic"
      android:textColor="#000000"

      />


  <RelativeLayout
      android:layout_width="460dp"
      android:layout_height="10dp"
      android:layout_marginTop="510dp"
      android:background="#ffb300">

  </RelativeLayout>







</RelativeLayout>